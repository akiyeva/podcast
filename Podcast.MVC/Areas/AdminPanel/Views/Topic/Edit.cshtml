@model TopicUpdateViewModel

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Topic</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Upload Image</label>
                    <input type="file" name="img" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input asp-for="CoverFile">
                        @* <span class="input-group-append">
                        <button class="file-upload-browse btn btn-primary">Upload</button>
                        </span> *@
                    </div>
                    <span asp-validation-for="CoverFile" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-light" asp-action="index">Cancel</button>
            </form>
        </div>
    </div>
</div>