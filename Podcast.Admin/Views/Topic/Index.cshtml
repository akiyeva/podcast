@model List<TopicViewModel>
@{
    var model = Model ?? new List<TopicViewModel> { };
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Topics</h4>
            <a class="btn btn-primary" asp-controller="Topic" asp-action="Create">Create</a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Cover Url
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in model)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.CoverUrl
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-action="update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-danger" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
